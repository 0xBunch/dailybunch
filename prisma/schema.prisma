generator client {
  provider        = "prisma-client-js"
  engineType      = "binary"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
}

// ==================== AUTH (NextAuth.js v5) ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For mock auth
  role          Role      @default(USER)
  isPro         Boolean   @default(false)

  // Subscription
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?

  // Relations
  accounts      Account[]
  sessions      Session[]
  feeds         UserFeed[]
  filters       Filter[]
  votes         Vote[]
  comments      Comment[]
  submittedLinks Link[]   @relation("SubmittedLinks")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

// ==================== USER PREFERENCES ====================

model UserFeed {
  id        String   @id @default(cuid())
  userId    String
  feedId    String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  feed      RssFeed  @relation(fields: [feedId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, feedId])
}

// ==================== CORE CONTENT ====================

model Link {
  id            String   @id @default(cuid())
  url           String   @unique
  title         String
  description   String?  @db.Text
  domain        String

  // AI-generated content
  aiSummary     String?  @db.Text

  // Metrics
  score         Int      @default(0)

  // Status
  status        LinkStatus @default(PENDING)

  // Source tracking
  firstSeenAt   DateTime @default(now())

  // Relations
  submitterId   String?
  submitter     User?    @relation("SubmittedLinks", fields: [submitterId], references: [id])
  mentions      Mention[]
  tags          TagsOnLinks[]
  votes         Vote[]
  comments      Comment[]
  editions      LinksOnEditions[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status, createdAt])
  @@index([score])
  @@index([domain])
}

enum LinkStatus {
  PENDING
  APPROVED
  FEATURED
  ARCHIVED
  REJECTED
}

model Vote {
  id        String   @id @default(cuid())
  value     Int      // 1 or -1
  userId    String
  linkId    String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, linkId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text

  userId    String
  linkId    String
  parentId  String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([linkId, createdAt])
}

// ==================== MENTIONS & SOURCES ====================

model Mention {
  id            String   @id @default(cuid())
  linkId        String
  sourceType    SourceType
  sourceId      String
  mentionedAt   DateTime @default(now())

  link          Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@unique([linkId, sourceType, sourceId])
  @@index([sourceType, sourceId])
}

enum SourceType {
  RSS
  NEWSLETTER
}

model RssFeed {
  id            String    @id @default(cuid())
  url           String    @unique
  name          String
  description   String?
  lastFetchedAt DateTime?
  lastError     String?
  isActive      Boolean   @default(true)

  subscribers   UserFeed[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Newsletter {
  id            String    @id @default(cuid())
  fromEmail     String?
  name          String
  inboxEmail    String    @unique
  description   String?
  lastReceivedAt DateTime?
  lastError     String?
  isActive      Boolean   @default(true)

  issues        NewsletterIssue[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model NewsletterIssue {
  id            String    @id @default(cuid())
  newsletterId  String
  subject       String?
  rawHtml       String?   @db.Text
  linkCount     Int       @default(0)

  newsletter    Newsletter @relation(fields: [newsletterId], references: [id], onDelete: Cascade)

  receivedAt    DateTime  @default(now())
  processedAt   DateTime?
}

// ==================== FILTERS ====================

model Filter {
  id            String   @id @default(cuid())
  userId        String
  name          String
  criteria      Json     // { keywords: [], domains: [], minMentions: number }
  aiPrompt      String?  @db.Text
  isActive      Boolean  @default(true)

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ==================== TAGS ====================

model Tag {
  id            String   @id @default(cuid())
  name          String   @unique
  slug          String   @unique
  color         String   @default("#6366f1")

  links         TagsOnLinks[]

  createdAt     DateTime @default(now())
}

model TagsOnLinks {
  linkId        String
  tagId         String

  link          Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  tag           Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  assignedAt    DateTime @default(now())

  @@id([linkId, tagId])
}

// ==================== NEWSLETTER EDITIONS ====================

model PublishedEdition {
  id            String   @id @default(cuid())
  title         String
  headline      String?
  status        EditionStatus @default(DRAFT)

  links         LinksOnEditions[]

  publishedAt   DateTime?
  emailSentAt   DateTime?
  sentCount     Int      @default(0)
  openCount     Int      @default(0)
  clickCount    Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LinksOnEditions {
  editionId     String
  linkId        String
  position      Int      @default(0)

  edition       PublishedEdition @relation(fields: [editionId], references: [id], onDelete: Cascade)
  link          Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@id([editionId, linkId])
}

enum EditionStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  FAILED
}

// ==================== NEWSLETTER SUBSCRIBERS ====================

model Subscriber {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  isActive      Boolean  @default(true)

  subscribedAt  DateTime @default(now())
  unsubscribedAt DateTime?
  lastSentAt    DateTime?
}
